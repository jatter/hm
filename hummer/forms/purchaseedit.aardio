//关闭窗口
winform.wndproc = function(hwnd,message,wparam,lparam){
    select(message) {//判断消息类型
        case 0x10/*_WM_CLOSE窗口关闭消息*/{
            debug.log4a.close();
        }   
    }
    //无返回值则继续调用默认回调函数
}

