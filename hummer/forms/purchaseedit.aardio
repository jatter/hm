}
 
//加入购物车
addShopCat = function(){
    debug.log4a.debug("加入购物车");
    //console.log("加入购物车");
    //淘宝
    var shopCart = wb.waitQueryEles({tagName="^A$";className="J_LinkAdd"}, 2000);
    if(!shopCart){
        //天猫
        shopCart = wb.waitQueryEles({tagName="^A$";id="J_LinkBasket"}, 2000);
    }
    
    if(shopCart){
       shopCart.click();
    }else{
      debug.log4a.err("未获取购物车按钮");
    }
}  
